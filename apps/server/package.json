{
  "name": "markart-blog-backend",
  "version": "1.0.0",
  "description": "Nuxt.js + React + TypeScript + Koa + MongoDB anvrtkm markrv",
  "main": "app.js",
  "scripts": {
    "clean": "rimraf app/**/*.{js,map} app/*.{js,map} config/**/*.{js,map}",
    "deploy": "tsc -p tsconfig.json && NODE_ENV=production node app.js",
    "dev": "NODE_ENV=development nodemon -w app -x ts-node app.ts",
    "updatedb": "node ./node_modules/geoip-lite/scripts/updatedb.js",
    "build": "tsc -p tsconfig.json",
    "tsc": "tsc -p tsconfig.json",
    "tsc:w": "tsc -p tsconfig.json -w",
    "test": "jest"
  },
  "repository": {
    "type": "git"
  },
  "keywords": [
    "node",
    "koa",
    "mongodb",
    "typescript"
  ],
  "author": "spiritree",
  "bugs": {
    "url": "https://github.com/"
  },
  "homepage": "https://github.com/",
  "dependencies": {
    "crypto": "^1.0.1",
    "geoip-lite": "^1.2.1",
    "jsonwebtoken": "^7.4.3",
    "kcors": "^2.2.1",
    "koa": "^2.3.0",
    "koa-body": "^2.3.0",
    "koa-helmet": "^3.2.0",
    "koa-router": "^7.3.0",
    "koa-static-cache": "^5.1.2",
    "mongoose": "^4.13.9",
    "mongoose-auto-increment-fix": "^5.0.2",
    "mongoose-paginate": "^5.0.3",
    "nodemailer": "^4.4.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "qn": "^1.3.0",
    "request": "^2.83.0",
    "routing-controllers": "^0.7.6",
    "trafficlight": "^4.3.0",
    "ts-node": "^4.1.0",
    "tslib": "^1.8.1",
    "typedi": "^0.6.0",
    "typescript": "^2.6.2",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "@types/geoip-lite": "^1.1.29",
    "@types/jest": "^22.2.0",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/koa": "^2.0.43",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.27",
    "@types/mongoose": "^4.7.32",
    "@types/mongoose-auto-increment": "^5.0.30",
    "@types/mongoose-paginate": "^5.0.6",
    "@types/mongoose-promise": "^4.5.7",
    "@types/supertest": "^2.0.4",
    "@types/yargs": "^10.0.1",
    "coveralls": "^3.0.0",
    "jest": "^22.4.2",
    "reflect-metadata": "^0.1.10",
    "restc": "^0.2.2",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "collectCoverage": true,
    "verbose": true
  }
}
